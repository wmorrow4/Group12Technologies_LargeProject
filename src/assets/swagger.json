{
	"swagger": "2.0",
	"info": {
		"title": "Contact Manager API",
		"description": "API for storing and retrieving contacts",
		"version": "1.0"
	},
	"produces": [
		"application/json"
	],
	"basePath": "/api",
	"paths": {
		"/signup": {
			"post": {
				"x-swagger-router-controller": "login",
				"operationId": "signup",
				"tags": [
					"/signup"
				],
				"description": "Creates a new user",
				"parameters": [
					{
						"name": "userinfo",
						"in": "body",
						"required": true,
						"schema": {
							"type": "object",
							"required": [
								"username",
								"password"
							],
							"properties": {
								"username": {
									"type": "string"
								},
								"password": {
									"type": "string"
								}
							}
						}
					}
				],
				"responses": {
					"default": {
						"description": "Invalid request.",
						"schema": {
							"$ref": "#/definitions/Error"
						}
					},
					"200": {
						"description": "Successful request.",
						"schema": {
							"$ref": "#/definitions/Success"
						}
					}
				}
			}
		},
		"/userLogin": {
			"post": {
				"x-swagger-router-controller": "login",
				"operationId": "userLogin",
				"tags": [
					"/userLogin"
				],
				"description": "Login as an existing user.",
				"parameters": [
					{
						"name": "userinfo",
						"in": "body",
						"required": true,
						"schema": {
							"type": "object",
							"required": [
								"username",
								"password"
							],
							"properties": {
								"username": {
									"type": "string",
									"example": "nik"
								},
								"password": {
									"type": "string",
									"example": "password"
								}
							}
						}
					}
				],
				"responses": {
					"default": {
						"description": "Invalid request.",
						"schema": {
							"$ref": "#/definitions/Error"
						}
					},
					"200": {
						"description": "Successful request.",
						"schema": {
							"$ref": "#/definitions/Success"
						}
					}
				}
			}
		},
		"/userLogout": {
			"post": {
				"x-swagger-router-controller": "login",
				"operationId": "userLogout",
				"tags": [
					"/userLogout"
				],
				"description": "Logout user.",
				"parameters": [],
				"responses": {
					"default": {
						"description": "Invalid request.",
						"schema": {
							"$ref": "#/definitions/Error"
						}
					},
					"200": {
						"description": "Successful request.",
						"schema": {
							"$ref": "#/definitions/Success"
						}
					}
				}
			}
		},
		"/createContact": {
			"post": {
				"x-swagger-router-controller": "contacts",
				"operationId": "createContact",
				"tags": [
					"/createContact"
				],
				"description": "Creates a new contact",
				"parameters": [
					{
						"name": "contact",
						"in": "body",
						"required": true,
						"schema": {
							"$ref": "#/definitions/Contact"
						}
					}
				],
				"responses": {
					"default": {
						"description": "Invalid request.",
						"schema": {
							"$ref": "#/definitions/Error"
						}
					},
					"200": {
						"description": "Successful request.",
						"schema": {
							"$ref": "#/definitions/Success"
						}
					}
				}
			}
		},
		"/deleteContact": {
			"post": {
				"x-swagger-router-controller": "contacts",
				"operationId": "deleteContact",
				"tags": [
					"/deleteContact"
				],
				"description": "Delete a contact",
				"parameters": [
					{
						"name": "contact",
						"in": "body",
						"required": true,
						"schema": {
							"$ref": "#/definitions/ObjectID"
						}
					}
				],
				"responses": {
					"default": {
						"description": "Invalid request.",
						"schema": {
							"$ref": "#/definitions/Error"
						}
					},
					"200": {
						"description": "Successful request.",
						"schema": {
							"$ref": "#/definitions/Success"
						}
					}
				}
			}
		},
		"/listContacts": {
			"post": {
				"x-swagger-router-controller": "contacts",
				"operationId": "listContacts",
				"tags": [
					"/listContacts"
				],
				"description": "List current contacts.",
				"parameters": [
					{
						"name": "searchInfo",
						"in": "body",
						"required": true,
						"schema": {
							"type": "object",
							"properties": {
								"search": {
									"type": "string",
									"example": "Powers"
								}
							}
						}
					}
				],
				"responses": {
					"default": {
						"description": "Invalid request.",
						"schema": {
							"$ref": "#/definitions/Error"
						}
					},
					"200": {
						"description": "return array of contact objects",
						"schema": {
							"type": "array",
							"items": {
								"$ref": "#/definitions/Contact"
							}
						}
					}
				}
			}
		},
		"/updateContact": {
			"post": {
				"x-swagger-router-controller": "contacts",
				"operationId": "updateContact",
				"tags": [
					"/updateContact"
				],
				"description": "Apply changes to current contact info",
				"parameters": [
					{
						"name": "contact",
						"in": "body",
						"required": true,
						"schema": {
							"allOf": [
								{
									"$ref": "#/definitions/ObjectID"
								},
								{
									"$ref": "#/definitions/Contact"
								}
							]
						}
					}
				],
				"responses": {
					"default": {
						"description": "Invalid request.",
						"schema": {
							"$ref": "#/definitions/Error"
						}
					},
					"200": {
						"description": "Successful request and contact id.",
						"schema": {
							"$ref": "#/definitions/Success"
						}
					}
				}
			}
		}
	},
	"definitions": {
		"ObjectID": {
			"properties": {
				"_id": {
					"type": "string"
				}
			},
			"required": [
				"_id"
			]
		},
		"Contact": {
			"properties": {
				"firstname": {
					"type": "string"
				},
				"lastname": {
					"type": "string"
				},
				"phone": {
					"type": "string"
				},
				"email": {
					"type": "string"
				}
			},
			"required": [
				"firstname",
				"lastname",
				"phone",
				"email"
			]
		},
		"Success": {
			"properties": {
				"message": {
					"type": "string"
				}
			},
			"required": [
				"message"
			]
		},
		"Error": {
			"properties": {
				"message": {
					"type": "string"
				}
			},
			"required": [
				"message"
			]
		}
	}
}