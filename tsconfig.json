{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["esnext", "dom","dom.iterable","scripthost"],
    "target": "esnext",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "typeRoots" : ["./node_modules/@types", "./typings"]
  },
  "include": [
    "src/**/*"
  ]
}
